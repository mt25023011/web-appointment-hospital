<!DOCTYPE html>
<html>

<head>
    <title>User Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Add SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>

<body class="bg-light">
    <!-- Image Preview Modal -->
    <div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-labelledby="imagePreviewModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imagePreviewModalLabel">Image Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="previewImage" src="" alt="Preview" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid py-4 px-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary bg-gradient d-flex justify-content-between align-items-center py-3">
                <div>
                    <h2 class="text-white mb-0">
                        <i class="fas fa-users me-2"></i>User Management
                    </h2>
                    <p class="text-white-50 mb-0">Manage your system users</p>
                </div>
                <a href="/crud/create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus-circle me-2"></i>Add New User
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="px-4 py-3">Image</th>
                                <th class="px-4 py-3">Email</th>
                                <th class="px-4 py-3">Password</th>
                                <th class="px-4 py-3">First Name</th>
                                <th class="px-4 py-3">Last Name</th>
                                <th class="px-4 py-3">Address</th>
                                <th class="px-4 py-3">Phone Number</th>
                                <th class="px-4 py-3">Gender</th>
                                <th class="px-4 py-3">Role</th>
                                <th class="px-4 py-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(function(user) { %>
                                <tr class="align-middle">
                                    <td class="px-4">
                                        <% if (user.image) { %>
                                            <img src="<%= user.image %>" alt="User Image"
                                                class="rounded-circle user-avatar cursor-pointer"
                                                onclick="showImagePreview(this.src)" width="40" height="40">
                                            <% } else { %>
                                                <div
                                                    class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white user-avatar">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                                <% } %>
                                    </td>
                                    <td class="px-4">
                                        <%= user.email %>
                                    </td>
                                    <td class="px-4">
                                        <%= user.password %>
                                    </td>
                                    <td class="px-4">
                                        <%= user.firstName %>
                                    </td>
                                    <td class="px-4">
                                        <%= user.lastName %>
                                    </td>
                                    <td class="px-4">
                                        <%= user.address %>
                                    </td>
                                    <td class="px-4">
                                        <%= user.phoneNumber %>
                                    </td>
                                    <td class="px-4">
                                        <span class="badge bg-info">
                                            <%= user.gender %>
                                        </span>
                                    </td>
                                    <td class="px-4">
                                        <span class="badge bg-primary">
                                            <%= user.roleID %>
                                        </span>
                                    </td>
                                    <td class="px-4">
                                        <div class="btn-group" role="group">
                                            <a href="/crud/edit-crud?id=<%= user.id %>"
                                                class="btn btn-outline-warning btn-sm me-2">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <button onclick="confirmDelete('<%= user.id %>', '<%= user.firstName %>')"
                                                class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Initialize image preview modal
        const imageModal = new bootstrap.Modal(document.getElementById('imagePreviewModal'));

        function showImagePreview(imageSrc) {
            document.getElementById('previewImage').src = imageSrc;
            imageModal.show();
        }

        function confirmDelete(userId, userName) {
            Swal.fire({
                title: 'Confirm Deletion',
                text: `Are you sure you want to delete user "${userName}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-trash me-2"></i>Yes, delete',
                cancelButtonText: '<i class="fas fa-times me-2"></i>Cancel',
                customClass: {
                    confirmButton: 'btn btn-danger',
                    cancelButton: 'btn btn-secondary'
                },
                buttonsStyling: false
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/crud/delete-crud?id=${userId}`;
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            const error = urlParams.get('error');

            if (message) {
                const toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer)
                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    },
                    willClose: () => {
                        // Ensure overlay is removed
                        const overlay = document.querySelector('.swal2-container');
                        if (overlay) {
                            overlay.remove();
                        }
                    }
                });

                toast.fire({
                    icon: 'success',
                    title: message,
                    customClass: {
                        popup: 'animated fadeInDown faster'
                    }
                });
            }

            if (error) {
                Swal.fire({
                    title: 'Error!',
                    text: error,
                    icon: 'error',
                    confirmButtonText: 'OK',
                    customClass: {
                        popup: 'animated shake faster'
                    }
                });
            }
        });
    </script>

    <style>
        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-bottom: none;
        }

        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .table td {
            font-size: 0.95rem;
            vertical-align: middle;
        }

        .btn {
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-1px);
        }

        .btn-group .btn {
            border-radius: 6px;
        }

        .badge {
            padding: 0.5em 1em;
            font-weight: 500;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .user-avatar:hover {
            transform: scale(1.1);
        }

        .cursor-pointer {
            cursor: pointer;
        }

        /* Modal styles */
        .modal-content {
            border-radius: 15px;
            border: none;
        }

        .modal-header {
            border-bottom: 1px solid #dee2e6;
            background-color: #f8f9fa;
        }

        .modal-body {
            padding: 1.5rem;
        }

        #previewImage {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

        /* Animation classes */
        .animated {
            animation-duration: 0.5s;
            animation-fill-mode: both;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translate3d(0, -20px, 0);
            }

            to {
                opacity: 1;
                transform: translate3d(0, 0, 0);
            }
        }

        .fadeInDown {
            animation-name: fadeInDown;
        }

        @keyframes shake {

            from,
            to {
                transform: translate3d(0, 0, 0);
            }

            10%,
            30%,
            50%,
            70%,
            90% {
                transform: translate3d(-5px, 0, 0);
            }

            20%,
            40%,
            60%,
            80% {
                transform: translate3d(5px, 0, 0);
            }
        }

        .shake {
            animation-name: shake;
        }

        .faster {
            animation-duration: 300ms;
        }
    </style>

</body>

</html>